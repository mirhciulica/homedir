#!/bin/sh
#
# ~/.xinitrc

export GTK2_RC_FILES="$HOME/.gtkrc-2.0"
export EDITOR="vim"
export VIRTUALENV_USE_DISTRIBUTE=1

upower -e &
numlockx &
urxvt -e tmux attach -t 0 &
conky | while read -r; do xsetroot -name "$REPLY"; done &
sh ~/.fehbg &
[ ! -s ~/.mpd/pid ] && mpd &
dropboxd &

exec ~/bin/startdwm
